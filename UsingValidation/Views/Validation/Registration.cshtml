
@{
    Layout = null;
}

<!DOCTYPE html>

<html> 
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
</head>
<body>
    <form id="registrationForm">
        <div class="header-title-semititle">
            <h1>Finals Laboratory Activity 1</h1>
            <p>Using Validation. Create a simple registration that validates the user input.</p>
        </div>
        <div class="inputs">
            <div class="line-section">
                <span class="label-input"><label>First Name</label><input type="text" pattern="[A-Za-z ]+" title="Please enter letters with spaces only (no numbers)." maxlength="50" placeholder="ex. Lance Kent Geoffrey" required /></span>
                <span class="label-input"><label>First Name</label><input type="text" pattern="[A-Za-z ]+" title="Please enter letters with spaces only (no numbers)." maxlength="50" placeholder="ex. Magollado" required /></span>
            </div>
            <div class="second-line-section">
                <span class="label-input"><label>Age</label><input type="number" min="1" max="99" placeholder="ex. 22" required /></span>
                <div class="gender-section">
                    <p>Gender</p>
                    <div class="genders">
                        <span class="radio-item">
                            <input type="radio" name="gender" value="male" required />
                            <label for="male">Male</label>
                        </span>
                        <span class="radio-item">
                            <input type="radio" name="gender" value="female" required /><label for="female">Female</label>
                        </span>
                    </div>
                </div>
                <span class="label-input"><label>Mobile Number</label><input type="tel" placeholder="ex. +639263226163" pattern="^\+?\d{10,13}$" title="Please enter a valid mobile number (e.g., +639123456789)" required /></span>
            </div>
            <div class="line-section">
                <span class="label-input"><label>Email</label><input type="email" placeholder="ex. lance.kent.magollado@gmail.com" required /></span>
            </div>
            <div class="line-section">
                <div class="label-input"><label>Address</label><textarea placeholder="ex. House No., Street, Barangay, Municipality, Province" required></textarea></div>
                <span class="label-input-dropdown">
                    <label>Blood Type</label><select required>
                        <option value="" selected disabled hidden>Select Blood Type</option>
                        <option value="a+">A+</option>
                        <option value="a-">A-</option>
                        <option value="b+">B+</option>
                        <option value="b-">B-</option>
                        <option value="ab+">AB+</option>
                        <option value="ab-">AB-</option>
                        <option value="o+">O+</option>
                        <option value="o-">O-</option>
                    </select>
                </span>
            </div>
            <div class="line-section">
                <span class="label-input-dropdown">
                    <label>Citizenship</label><select style="width:200px;" required>
                        <option value="" selected disabled hidden>Select Citizenship</option>
                        <option value="filipino">Filipino</option>
                        <option value="american">American</option>
                        <option value="japanese">Japanese</option>
                        <option value="chinese">Chinese</option>
                        <option value="italian">Italian</option>
                    </select>
                </span>
                <div class="gender-section">
                    <p>Marital Status</p>
                    <div class="genders">
                        <span class="radio-item">
                            <input type="radio" name="status" value="single" required />
                            <label for="male">Single</label>
                        </span>
                        <span class="radio-item">
                            <input type="radio" name="status" value="married" required /><label for="married">Married</label>
                        </span>
                        <span class="radio-item">
                            <input type="radio" name="status" value="divorced" required /><label for="divorced">Divorced</label>
                        </span>
                        <span class="radio-item">
                            <input type="radio" name="status" value="separated" required /><label for="separated">Separated</label>
                        </span>
                    </div>
                </div>
            </div>
            <div class="last-line-section">
                <p style="margin:0;">Educational Attainment</p>
                <div class="checkbox-inputs">
                    <div class="checkbox">
                        <span class="label-checkbox">
                            <input name="educational-attainment" type="checkbox" /><label>Elementary Undergraduate</label>
                        </span>
                        <span class="label-checkbox">
                            <input name="educational-attainment" type="checkbox" /><label>Elementary Graduate</label>
                        </span>
                        <span class="label-checkbox">
                            <input name="educational-attainment" type="checkbox" /><label>High School Undergraduate</label>
                        </span>
                    </div>
                    <div class="checkbox">
                        <span class="label-checkbox">
                            <input name="educational-attainment" type="checkbox" /><label>High School Graduate</label>
                        </span>
                        <span class="label-checkbox">
                            <input name="educational-attainment" type="checkbox" /><label>College Undergraduate</label>
                        </span>
                        <span class="label-checkbox">
                            <input name="educational-attainment" type="checkbox" /><label>College Graduate</label>
                        </span>
                    </div>
                    <div class="checkbox">
                        <span class="label-checkbox">
                            <input name="educational-attainment" type="checkbox" /><label>Vocational Degree</label>
                        </span>
                        <span class="label-checkbox">
                            <input name="educational-attainment" type="checkbox" /><label>Master’s Degree</label>
                        </span>
                        <span class="label-checkbox">
                            <input name="educational-attainment" type="checkbox" /><label>Doctorate Degree</label>
                        </span>
                    </div>
                </div>
                <p id="error-message" style="color:red; display:none; margin-top:5px;">Please select at least one educational attainment.</p>
            </div>

            <hr />

            <button type="submit">Continue</button>
        </div>
    </form>
    <script>
        document.getElementById('registrationForm').addEventListener('submit', function (e) {
            const checkboxes = document.querySelectorAll('input[name="educational-attainment"]');
            const anyChecked = Array.from(checkboxes).some(cb => cb.checked);
            const errorMessage = document.getElementById('error-message');

            if (!anyChecked) {
                e.preventDefault();
                errorMessage.style.display = 'block';
            } else {
                errorMessage.style.display = 'none';
                alert("Successfully submitted. All values are true!");
            }

        });
    </script>
</body>
</html>
